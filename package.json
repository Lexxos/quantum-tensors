{
  "name": "quantum-tensors",
  "version": "0.0.2",
  "description": "Tensors for quantum information and quantum optics.",
  "main": "build/main.js",
  "repository": "https://github.com/stared/quantum-tensors",
  "author": "Piotr Migdal",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^21.1.10",
    "jest": "^24.0.0",
    "ts-jest": "^24.0.2",
    "tslint": "^5.8.0",
    "typescript": "^3.6.3"
  },
  "scripts": {
    "start": "tsc --outDir ./build && node ./build/main.js",
    "try-simple": "tsc --outDir ./build && node ./build/simple.js",
    "try-tensor": "tsc --outDir ./build && node ./build/tensor.js",
    "try-step": "tsc --outDir ./build && node ./build/try_step.js",
    "build": "tsc --pretty --outDir ./build",
    "test": "tsc --noEmit -p . && jest --no-cache",
    "docs": "typedoc --out docs src main.ts && push-dir --dir=docs --branch=gh-pages --cleanup",
    "build-defs": "tsc --declaration --outDir . --emitDeclarationOnly",
    "postinstall": "tsc --outDir ./build"
  },
  "files": [
    "build/**/*"
  ],
  "dependencies": {
    "@types/lodash": "^4.14.138",
    "lodash": "^4.17.15"
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ]
  }
}
